<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CATALOGO</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <!--lINK CSS DE BOOSTRAP-->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css">
  <script src="	https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <style>
    main {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;

    }

    #unidades {
      width: 50px;
    }

    .card {
      margin: 20px;
    }

    .card img {
      height: 300px;
    }
  </style>
</head>

<body>
  <%- include('../parciales/navbar')%>
    <main>
      <%catalogo.forEach(function(producto){%>

        <div class="card" style="width: 18rem;">
          <img src="https://picsum.photos/200/300" class="card-img-top" alt="...">
          <div class="card-body">
            
            <h5 class="card-title">
              <%=producto.nombre%>

            </h5>
            <!-- <p class="card-text">
              <%=producto._id%>
            </p>-->
            <p class="card-text">
              <%=producto.descripcion%>
            </p>
            <p class="card-text">
              <%=producto.precio%>
            </p>

            <a href="#" class="btn btn-outline-success" role="button" data-bs-toggle="modal"
            data-bs-target="#exampleModal">
            ver producto
        </a>
            <a href="#" onclick="mostrarProducto('<%=producto._id%>', '<%=producto.nombre%>',)" class="btn btn-dark"><i
                class="bi bi-cart-plus"></i></a>

            <input type="number" id="unidades">
          </div>
        </div>
        <%})%>


    </main>


    <script>


function mostrarProducto(json){
 let catalogo=   document.getElementById('carritoContenido');
json.forEach(element => {
    catalogo.innerHTML+=
    
    `<div class="card">
      <div class="card" style="width: 18rem;">
          <img src="https://picsum.photos/200/300" class="card-img-top" alt="...">
          <div class="card-body">
        <div class="imgBx">
            <img src="${element.nombre}">
        </div>

        <div class="contentBx">
            <h2>price: ${element.precio}"</h2>
        </div>
    </div>`
 

});}

      function carrito(i, a) {
        const carrito = document.getElementById('carritoContenido');
        const carritoC= document.createElement('div') 
        const productos = document.createElement('p');
        const nombre = document.createElement('p');

        productos.textContent = i;
        nombre.textContent = a;
        carritoC.append(productos, nombre)

        carrito.appendChild(carritoC);
      }
    </script>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"
      integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V"
      crossorigin="anonymous"></script> <!--lINKS SCRIPS DE BOOSTRAP-->
</body>

</html>